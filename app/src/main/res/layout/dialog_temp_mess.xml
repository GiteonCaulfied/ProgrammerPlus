<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="370dp"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="251dp"
        android:layout_height="34dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:text="Choose a template"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="20dp"
        android:text="Confirm"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/cancel"
        app:layout_constraintTop_toBottomOf="@+id/radio_temp_mess" />

    <Button
        android:id="@+id/cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp"
        android:text="Cancel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radio_temp_mess" />

    <RadioGroup
        android:id="@+id/radio_temp_mess"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2">

        <RadioButton
            android:id="@+id/temp_mess1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hi %FRI_USERNAME%! It's been %MESSTIME_TO_CURR% since we chatted last time. Let's have a chat!"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/temp_mess2"
            android:layout_width="342dp"
            android:layout_height="144dp"
            android:text="Hi %FRI_USERNAME%! My name is %MY_USERNAME%, and my email address is %MY_EMAILADDRESS%. Glad to meet you! "
            android:textColor="@color/black"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/temp_mess3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text='Hi %FRI_USERNAME%, I am not available now. Please send an email to me. My email address is %MY_EMAILADDRESS%. Cheers, %MY_USERNAME%.'
            android:textColor="@color/black"
            android:textSize="16sp" />
    </RadioGroup>
</androidx.constraintlayout.widget.ConstraintLayout>